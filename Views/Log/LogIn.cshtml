@using Microsoft.Extensions.Options
@model TUNIWEB.Models.ViewModel.RegisterLoginViewModel
<div class="section content">
    <div class="section register">
        <div class="groupbtn">
            <div id="btn"></div>
            <button class="toggle-btn1">Ingresar</button>
            <button class="toggle-btn2">Registrarte</button>
        </div>
        <div class="warnigs" asp-validation-summary="ModelOnly"></div>
        <div class="forms">
            <form method="post" class="frm post" id="login" asp-action="Ingresar" asp-controller="Log">
                <div class="radio-check">
                    <div class="section-radio">
                        <input type="radio" asp-for="LoginUserClass.tipo_usuario" value="0" id="al" checked />
                        <input type="radio" asp-for="LoginUserClass.tipo_usuario" value="1" id="uni" />
                    </div>
                    <div class="label-text">
                        <label for="al">Alumno</label>
                        <label for="uni">Universidad</label>
                    </div>
                </div>
                <h1>Bienvenido de nuevo a TUNI</h1>
                <div class="section-insert">
                    <input asp-for="LoginUserClass.username" type="text" placeholder="Escribe el nombre de tu usuario" />
                    <span asp-validation-for="LoginUserClass.username"></span>
                    <input asp-for="LoginUserClass.contraseña" type="password" placeholder="Escribe tu contraseña" />
                    <span asp-validation-for="LoginUserClass.contraseña"></span>
                    <button type="submit">Ingresar</button>
                    <input type="hidden" id="tokeningre" name="token" />
                </div>
            </form>
            <form method="post" class="frm get" id="register" asp-action="Registro" asp-controller="Log">
                <div class="radio-check">
                    <div class="section-radio">
                        <input type="radio" asp-for="RegisterUserClass.tipo_usuario" value="0" id="al2" checked />
                        <input type="radio" asp-for="RegisterUserClass.tipo_usuario" value="1" id="uni2" />
                    </div>
                    <div class="label-text">
                        <label for="al2">Alumno</label>
                        <label for="uni2">Universidad</label>
                    </div>
                </div>
                <h1>Registrate a TUNI</h1>
                <div class="section-insert">
                    <input asp-for="RegisterUserClass.username" type="text" placeholder="Escribe el nombre de tu usuario" />
                    <span asp-validation-for="RegisterUserClass.username"></span>
                    <input asp-for="RegisterUserClass.pasword" type="password" placeholder="Escribe tu contraseña" />
                    <span asp-validation-for="RegisterUserClass.pasword"></span>
                    <input asp-for="RegisterUserClass.confirmPassword" type="password" placeholder="Repita su contraseña" />
                    <span asp-validation-for="RegisterUserClass.confirmPassword"></span>
                    <button type="submit">Registrate</button>
                </div>
            </form>
        </div>
    </div>
</div>
<footer class="section footer"></footer>
<script src="~/js/logIn.js" type="text/javascript"></script>
        